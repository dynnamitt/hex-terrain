{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "cargo fmt -- --check 2>&1 || cargo fmt"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$CLAUDE_TOOL_INPUT\" | grep -q '\\[lints'; then echo 'BLOCKED: Do not modify lint configuration'; exit 1; fi"
          }
        ]
      }
    ]
  }
}
